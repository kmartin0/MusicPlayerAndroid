<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="smallControlButton">
        <item name="android:layout_width">@dimen/control_icon_medium_large</item>
        <item name="android:layout_height">@dimen/control_icon_medium_large</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="largeControlButton">
        <item name="android:layout_width">@dimen/control_icon_large</item>
        <item name="android:layout_height">@dimen/control_icon_large</item>
        <item name="android:tint">@color/white</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="whiteText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="smallWhiteText" parent="whiteText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mediumWhiteText" parent="whiteText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="largeWhiteText" parent="whiteText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="extraLargeWhiteText" parent="whiteText">
        <item name="android:textSize">22sp</item>
    </style>

    <item name="progressBar" type="id" />
</resources>
