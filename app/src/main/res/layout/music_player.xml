<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivAlbum"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@id/tvSong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Little Wing"
        app:layout_constraintBottom_toTopOf="@id/tvArtist"
        app:layout_constraintEnd_toStartOf="@id/ivPrevious"
        app:layout_constraintStart_toEndOf="@id/ivAlbum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Jimi Hendrix"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@id/ivPrevious"
        app:layout_constraintStart_toEndOf="@id/ivAlbum"
        app:layout_constraintTop_toBottomOf="@id/tvSong" />

    <ImageView
        android:id="@+id/ivPrevious"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:src="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/ivPause"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPause"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:src="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/ivNext"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>